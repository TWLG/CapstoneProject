datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @map("refreshToken")
  access_token      String? @map("accessToken")
  expires_at        Int?    @map("expiresAt")
  token_type        String? @map("tokenType")
  scope             String?
  id_token          String? @map("idToken")
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  roles         String[]  @default(["user"]) // Array of roles as strings

  accounts Account[]
  sessions Session[]

  @@map("users")
}

model Role {
  name             String  @id // Use the name field as the primary key
  administrator    Boolean @default(false)
  manageRoles      Boolean @default(false)
  manageUsers      Boolean @default(false)
  viewUsers        Boolean @default(false)
  viewControlPanel Boolean @default(false)
  viewLogs         Boolean @default(false)
  sendMessages     Boolean @default(false)
  deleteMessages   Boolean @default(false)
  banUsers         Boolean @default(false)
  pardonUsers      Boolean @default(false)
  manageQueue      Boolean @default(false)
  viewQueue        Boolean @default(false)

  @@map("roles")
}
